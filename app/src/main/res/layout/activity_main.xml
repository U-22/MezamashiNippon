<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kimata.mezamashinippon.MainActivity"
    android:gravity="bottom"
    android:weightSum="1"
    android:background="#FF009688">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main"
        android:layout_marginBottom="200dp"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:textAlignment="center" />

    <TextView
        android:text="@string/manual"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:id="@+id/tutorial_text"
        android:onClick="tutorialDialog"
        android:gravity="center_horizontal"
        android:textStyle="normal|italic"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:clickable="true"
        android:layout_marginBottom="100dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/clickable_border" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="debug"
        android:id="@+id/button_debug"
        android:layout_gravity="center_horizontal" />

    <ImageButton
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_setting"
        android:src="@drawable/ic_settings_black_24dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/shape_rounded_corners_10dp"
        android:layout_gravity="center|bottom" />
</LinearLayout>
