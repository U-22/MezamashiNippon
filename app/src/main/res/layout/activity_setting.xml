<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearlayout01">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   アラーム"
                android:id="@+id/textView5"
                android:layout_weight="0.10"
                android:textColor="@color/accent_material_light"
                android:textSize="25dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center_vertical"
                android:text="   アラーム"
                android:textColor="#000000"
                android:textSize="25dp"
                android:layout_weight="0.10" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switch1"
                android:layout_gravity="right"
                android:layout_marginRight="25dp"
                android:layout_marginTop="-52dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="   設定時刻"
                android:id="@+id/time_setting"
                android:textSize="25dp"
                android:textColor="#000000"
                android:background="@drawable/border"
                android:onClick="true"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/timeDialog"
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:gravity="center|center_vertical|center_horizontal"
                android:text="時刻"
                android:textColor="#999999"
                android:textSize="25dp"
                android:textStyle="italic"
                android:layout_marginTop="-50dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   ニュース"
                android:id="@+id/textView6"
                android:layout_weight="0.10"
                android:textColor="@color/accent_material_light"
                android:textSize="25dp"
                android:layout_marginTop="40dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="0.10"
                android:gravity="center_vertical"
                android:text="   表示ニュース数"
                android:textColor="#000000"
                android:textSize="25dp" />

            <Spinner
                android:id="@+id/newsNumber"
                android:layout_width="57dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:entries="@array/list"
                android:layout_marginTop="-60dp"
                android:layout_marginRight="20dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="0.07"
                android:gravity="center_vertical"
                android:text="   参照ニュースサイト"
                android:textColor="#000000"
                android:textSize="25dp" />

            <ImageButton
                android:id="@+id/web_botton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_add_black_24dp"
                android:layout_gravity="right"
                android:background="@drawable/shape_rounded_corners_10dp"
                android:layout_marginTop="-33dp"
                android:layout_marginRight="30dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="リスト長押しで削除できます。"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp" />

            <ListView
                android:layout_width="370dp"
                android:layout_height="183dp"
                android:id="@+id/url_list"
                android:layout_marginTop="5dp"
                android:layout_gravity="center" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/save_setting"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_weight="0.02"
                android:src="@drawable/ic_check_circle_white_24dp"
                app:backgroundTint="#0ca5ba" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>