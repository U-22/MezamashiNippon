<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearlayout01"
            android:backgroundTint="@color/accent_material_light">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.07"
                android:background="@color/accent_material_light"
                android:gravity="center_vertical"
                android:text="アラーム"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switch1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/timeDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.03"
                android:gravity="center|center_vertical|center_horizontal"
                android:text="時間が表示されます"
                android:textColor="#020202"
                android:textSize="35dp"
                android:textStyle="italic"
                android:layout_marginTop="5dp" />

            <ImageButton
                android:id="@+id/pickTime"
                android:src="@drawable/ic_schedule_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_rounded_corners_10dp"
                android:layout_weight="0.04"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.06"
                android:background="@color/accent_material_light"
                android:gravity="center_vertical"
                android:text="表示ニュース数"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_marginTop="15dp" />

            <Spinner
                android:id="@+id/newsNumber"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:entries="@array/list"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="0.07"
                android:background="@color/accent_material_light"
                android:gravity="center_vertical"
                android:text="参照ニュースサイト"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/web_botton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_black_24dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_rounded_corners_10dp"
                android:layout_marginTop="20dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="リスト長押しで削除できます。"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp" />

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="183dp"
                android:id="@+id/url_list"
                android:layout_weight="279.23"
                android:layout_marginTop="5dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/save_setting"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_weight="0.02"
                android:src="@drawable/ic_check_circle_white_24dp"
                app:backgroundTint="#0ca5ba" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>